//Задание 5. Напишите программу, которая проверяет, является ли введенное
//пользователем число четным или нечетным.  Юрченко Кирилл ДТН-309//
import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Введите целое число: ");
        int number = scanner.nextInt();
        if (number % 2 == 0) {
            System.out.println("Число " + number + " является четным.");
        } else {
            System.out.println("Число " + number + " яляется нечетным.");
        }
        scanner.close();
    }
}
